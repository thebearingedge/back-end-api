{
  "compilerOptions": {
    "downlevelIteration": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "noImplicitAny": true,
    "strictNullChecks": true,
    "outDir": "build/",
    "target": "es2018"
  },
  "include": [
    "api/",
    "database/"
  ],
  "exclude": [
    "node_modules/",
    "**/*.test.ts",
    "coverage/"
  ]
}
