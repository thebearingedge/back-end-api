{
  "name": "back-end-api",
  "version": "1.0.0",
  "description": "Typescript, Fastify, Postgres, and Mocha",
  "main": "build/index.js",
  "scripts": {
    "build": "tsc -p tsconfig.prod.json",
    "tdd": "mocha -w -R min",
    "dev": "nodemon api/index.ts",
    "cover": "nyc npm test",
    "db:shell": ". ./.env && docker-compose exec postgres psql $DATABASE_URL",
    "services:start": "docker-compose up -d --build",
    "services:stop": "docker-compose down",
    "test": "mocha",
    "upgrade": "npm-check -u"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "mocha": {
    "extension": [
      "ts"
    ],
    "spec": "**/*.test.ts",
    "unhandled-rejections": "strict",
    "require": [
      "dotenv/config",
      "ts-node/register"
    ],
    "exclude": [
      "**/node_modules/**"
    ]
  },
  "nyc": {
    "extends": "@istanbuljs/nyc-config-typescript",
    "reporter": [
      "html",
      "text-summary"
    ],
    "include": [
      "api/**/*.ts",
      "database/**/*.ts"
    ],
    "exclude": [
      "**/test.ts",
      "**/*.test.*"
    ],
    "cache": false,
    "temp-dir": "coverage/.nyc_output/"
  },
  "nodemonConfig": {
    "ext": "ts,js",
    "exec": "ts-node -r dotenv/config",
    "watch": [
      "api/",
      "database/",
      "tsconfig.json"
    ],
    "ignore": [
      "**/test.ts",
      "**/*.test.ts"
    ]
  },
  "eslintConfig": {
    "root": true,
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "project": "tsconfig.json"
    },
    "plugins": [
      "@typescript-eslint"
    ],
    "extends": [
      "standard-with-typescript"
    ],
    "rules": {
      "padded-blocks": [
        "error",
        {
          "classes": "always"
        }
      ],
      "@typescript-eslint/prefer-function-type": "off",
      "@typescript-eslint/consistent-type-definitions": [
        "error",
        "type"
      ],
      "@typescript-eslint/no-unused-vars": [
        "error",
        {
          "varsIgnorePattern": "_*"
        }
      ],
      "@typescript-eslint/return-await": "off",
      "@typescript-eslint/space-before-function-paren": [
        "error",
        {
          "anonymous": "always",
          "named": "never",
          "asyncArrow": "always"
        }
      ]
    }
  },
  "eslintIgnore": [
    "build/",
    "coverage/",
    "node_modules/"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/thebearingedge/back-end-api.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/thebearingedge/back-end-api/issues"
  },
  "homepage": "https://github.com/thebearingedge/back-end-api#readme",
  "devDependencies": {
    "@istanbuljs/nyc-config-typescript": "1.0.1",
    "@types/chai": "4.2.11",
    "@types/lodash": "^4.14.157",
    "@types/mocha": "7.0.2",
    "@types/node": "^14.0.22",
    "@types/pg": "^7.14.4",
    "@types/promise-retry": "1.1.3",
    "@typescript-eslint/eslint-plugin": "^3.6.0",
    "@typescript-eslint/parser": "^3.6.0",
    "chai": "4.2.0",
    "chai-struct": "3.0.4",
    "eslint": "^7.4.0",
    "eslint-config-standard-with-typescript": "^18.0.2",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-promise": "4.2.1",
    "eslint-plugin-standard": "4.0.1",
    "husky": "4.2.5",
    "lint-staged": "^10.2.11",
    "mocha": "^8.0.1",
    "nodemon": "2.0.4",
    "npm-check": "^5.9.2",
    "nyc": "^15.1.0",
    "ts-node": "^8.10.2",
    "typescript": "^3.9.6"
  },
  "dependencies": {
    "ajv": "^6.12.3",
    "ajv-errors": "1.0.1",
    "dotenv": "8.2.0",
    "fastify": "^3.0.0",
    "pg": "^8.3.0",
    "postgres": "^1.0.2",
    "postgres-migrations": "4.0.3",
    "promise-retry": "^2.0.1"
  }
}
