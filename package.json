{
  "name": "back-end-api",
  "version": "1.0.0",
  "description": "Typescript, Fastify, Postgres, and Mocha",
  "main": "build/index.js",
  "scripts": {
    "build": "tsc",
    "tdd": "mocha -w -R min",
    "dev": "nodemon api/index.ts",
    "services:start": "docker-compose up -d --build",
    "services:stop": "docker-compose down",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "mocha": {
    "extension": [
      ".ts"
    ],
    "spec": "**/*.test.ts",
    "unhandled-rejections": "strict",
    "require": [
      "dotenv/config",
      "ts-node/register"
    ],
    "exclude": [
      "**/node_modules/**"
    ]
  },
  "nyc": {
    "extension": [
      ".ts"
    ],
    "exclude": [
      "**/*.test.ts"
    ],
    "reporter": [
      "html",
      "text-summary"
    ],
    "cache": false,
    "temp-dir": "coverage/.nyc_output/"
  },
  "nodemonConfig": {
    "ext": "ts,js",
    "exec": "ts-node -r dotenv/config",
    "watch": [
      "api/",
      "database/",
      "tsconfig.json"
    ]
  },
  "eslintConfig": {
    "root": true,
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "project": "tsconfig.json"
    },
    "plugins": [
      "@typescript-eslint"
    ],
    "extends": [
      "standard-with-typescript"
    ],
    "rules": {
      "padded-blocks": [
        "error",
        {
          "classes": "always"
        }
      ],
      "@typescript-eslint/consistent-type-definitions": [
        "error",
        "type"
      ],
      "@typescript-eslint/no-unused-vars": [
        "error",
        {
          "varsIgnorePattern": "_*"
        }
      ],
      "@typescript-eslint/return-await": "off",
      "@typescript-eslint/space-before-function-paren": [
        "error",
        {
          "anonymous": "always",
          "named": "never",
          "asyncArrow": "always"
        }
      ]
    }
  },
  "eslintIgnore": [
    "build/",
    "coverage/",
    "node_modules/"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/thebearingedge/back-end-api.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/thebearingedge/back-end-api/issues"
  },
  "homepage": "https://github.com/thebearingedge/back-end-api#readme",
  "devDependencies": {
    "@types/chai": "^4.2.11",
    "@types/mocha": "^7.0.2",
    "@types/node": "^13.13.5",
    "@types/pg": "^7.14.3",
    "@types/promise-retry": "^1.1.3",
    "@typescript-eslint/eslint-plugin": "^2.31.0",
    "@typescript-eslint/parser": "^2.31.0",
    "chai": "^4.2.0",
    "chai-struct": "^3.0.4",
    "eslint": "^6.8.0",
    "eslint-config-standard-with-typescript": "^16.0.0",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.2",
    "mocha": "^7.1.2",
    "nodemon": "^2.0.3",
    "nyc": "^15.0.1",
    "ts-node": "^8.10.1",
    "typescript": "^3.8.3"
  },
  "dependencies": {
    "@types/lodash": "^4.14.150",
    "ajv": "^6.12.2",
    "ajv-errors": "^1.0.1",
    "dotenv": "^8.2.0",
    "fastify": "^2.14.0",
    "lodash": "^4.17.15",
    "pg": "^8.0.3",
    "postgres-migrations": "^4.0.3",
    "promise-retry": "^1.1.1"
  }
}
